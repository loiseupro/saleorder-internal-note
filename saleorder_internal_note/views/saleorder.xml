<?xml version="1.0"?>
<odoo>
    <record id="saleorder_internal_note_template_form_view" model="ir.ui.view">
        <field name="name">saleorder.internal.note.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='note_group']" position="after">
                <div name="saleorder_internal_note" string="Sale order">
                    <div class="col-md-12 mt-3">                 
                        <label for="saleorder_internal_note"/>
                        <field name="saleorder_internal_note" placeholder="Internal note"/>
                    </div> 
                </div>
            </xpath>
        </field>
    </record>
</odoo>